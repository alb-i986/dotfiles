[core]
	autocrlf = input # this assumes you are on linux -- set it to 'true' if on windows
	editor = vi
	excludesfile = ~/.gitignore_global

[alias]
	co = checkout
	st = status
	ci = commit

[push]
	default = simple

[rebase]
	autoStash = true
	autoSquash = true

[pull]
	ff = only

